doctype html
html
    head
        title node-notebook
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css")
        link(rel="stylesheet" href="/assets/font-awesome/css/font-awesome.css")
        style
            include ../node_modules/psychic-ui/psychic-min.css
        style
            include assets/app.css
        style
            include assets/index.css
    body
        div.navbar
            div.container
                div.navbar-title(style="margin-top:35px;") node-notebook
                div.nav
                    a(href="#")
                        i(class="fa fa-3x fa-github")
        div.grid
            div.col-2-12
            div.col-8-12(style="position:relative;padding-bottom:80px;")

                if(!presentation)
                    button.btn.border-primary.pull-right create a notebook

                h6 module &nbsp;
                    small var notebook = (require('node-notebook'))

                h4
                    small > run = function(script=required, session=optional, callback=required, error, type)

                pre.code
                    |notebook.run("var moment=require('moment');moment().format('x');", function(result) {
                    |    // result = { trace: [], result: '\'1462858310879\'', type: 'String' }
                    |});
                br
                h4
                    small > install = function(dir, module, callback)
                pre.code
                    |notebook.install('sandbox/install', 'moment', function(){
                    |    assert.isOk(fs.existsSync('sandbox/install/node_modules/moment/package.json'));
                    |    done();
                    |});
                br
                h4
                    small > type = function(value)
                pre.code
                    |var type = notebook.type({});
                    |assert.equal(type, 'Object');
                br
                hr
                br

                h6 api &nbsp;
                    small (npm start)

                h4
                    small > /api/run

                pre.code
                    | curl -X POST localhost:3000/api/run --data "script=var moment=require('moment');moment().format('x');"

                pre
                    | {
                    |    "trace": [],
                    |    "result": "'1460177101199'",
                    |    "type": "String"
                    | }

                h4
                    small > /notebook/:hash/json

                pre.code
                    | curl -X GET localhost:3000/notebook/example/json

                pre
                    |[
                    |    {
                    |        "type": "script",
                    |        "value": "var i = 5;"
                    |    },
                    |    {
                    |        "type": "text",
