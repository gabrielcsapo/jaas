doctype html
html
    head
        title jaas
        link(rel="stylesheet" href="/assets/font-awesome/css/font-awesome.css")
        link(rel="stylesheet" href="/assets/normalize/normalize.css")
        link(rel="stylesheet" href="/assets/codemirror/lib/codemirror.css")
        script(src="/assets/codemirror/lib/codemirror.js" type="text/javascript")
        script(src="/assets/codemirror/mode/javascript/javascript.js" type="text/javascript")
        style(type="text/css").
            .CodeMirror {
                height: auto;
            }
            .CodeMirror-gutters {
                background-color: transparent;
                border-right: 0;
            }
            .code-form.active .code-actions {
                display: block;
            }
            .code-form:hover .code-actions {
                display: block;
            }
            .code-response {
                margin-left: 33px;
                border: 1px solid #dedede;
                padding: 10px;
                margin-top: 5px;
                display: none;
            }
            .code-tooltip {
                margin-left:33px;
            }
            .code-actions {
                float: right;
                display: none;
            }
            .code-container {
                width:50%;
                margin:0 auto;
                margin-top:60px;
            }
            @media (width: 320px) {
                .code-container {
                    width: 100%;
                }
            }
            @media (width: 640px) {
                .code-container {
                    width: 100%;
                }
            }
    body
        div(class="code-container")
            div(class="code-form")
                textarea(id="code" name="code" style="display: none;")
                    | function func(){return 100;}
                i(class="code-tooltip")
                    small type code and press shift + enter to run
                i(class="code-actions")
                    i(class="fa fa-terminal") &nbsp;&nbsp;
                    i(class="fa fa-pencil") &nbsp;&nbsp;
                    i(class="fa fa-trash-o") &nbsp;&nbsp;
                div(class="code-response" id="code-response")

        script(src="/assets/app.js" type="text/javascript")
