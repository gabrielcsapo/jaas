doctype html
html
    head
        title node-notebook
        link(rel="stylesheet" href="/assets/font-awesome/css/font-awesome.css")
        link(rel="stylesheet" href="/assets/normalize/normalize.css")
        link(rel="stylesheet" href="/assets/codemirror/lib/codemirror.css")
        link(rel="stylesheet" href="/assets/app.css")
        script(src="/assets/marked/lib/marked.js" type="text/javascript")
        script(src="/assets/codemirror/lib/codemirror.js" type="text/javascript")
        script(src="/assets/codemirror/mode/javascript/javascript.js" type="text/javascript")
    body
        div(class="code-container" data-stored-values=stored_values)
